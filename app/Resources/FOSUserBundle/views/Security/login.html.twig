{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="login_panel log_section">
        <div class="login_head">
                <h1>Prihlásenie sa do administrácie</h1>
        </div>
        <form action="{{ path("fos_user_security_check") }}" method="post" id="login_form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                        <label for="login_username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control input-lg" data-required="true" data-minlength="2" data-required-message="Please enter a valid E-mail" />
                </div>
                <div class="form-group">
                        <label for="login_password">{{ 'security.login.password'|trans }} <a href="{{ path('fos_user_resetting_request') }}" class="pull-right">Zabudnuté heslo?</a></label>
                        <input type="password" id="password" name="_password" required="required" class="form-control input-lg" data-required="true" data-minlength="6" data-minlength-message="Password should have at least 6 characters." data-required-message="Please enter a valid Password" />
                        <label class="checkbox"><input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}</label>
                </div>
                <div class="login_submit">
                        <button class="btn btn-primary btn-block btn-lg">{{ 'security.login.submit'|trans }}</button>
                </div>
                {#<div class="text-center">
                        <small>Not registered? <a class="form_toggle" href="#reg_form"> Sign up here</a></small>
                </div>#}
        </form>
</div>
{% endblock fos_user_content %}