{% block jssheets %}
    <script src="{{ asset('js/lib/bootbox/bootbox.min.js') }}"></script>

    <script>
        $(function () {
            //* delete user
            $('.remove_user').click(function (e) {
                e.preventDefault();
                // var
                var btn = $(this);
                bootbox.dialog({
                    message: '<div class="text-center lead">Are you sure?</div>',
                    title: 'Deleting',
                    buttons: {
                        cancel: {
                            label: "Cancel",
                            className: "btn-link",
                            callback: function () {
                            }
                        },
                        confirm: {
                            label: "Delete",
                            className: "btn-danger",
                            callback: function () {
                                btn.parent('form').submit();
                                //this.form.submit();
                            }
                        }
                    }
                });
            })

        })

    </script>
